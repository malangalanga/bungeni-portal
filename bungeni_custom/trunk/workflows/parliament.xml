<?xml version="1.0"?>
<workflow title="Parliament Workflow"
    description="Workflow for parliaments"
    tags="public"
    permission_actions=".View .Edit .Add .Delete"
    >
    
    <feature name="address" enabled="true" />
    
    <!-- global grants -->
    <allow permission=".Add" roles="Clerk" />
    <allow permission=".Edit" roles="Clerk" />
    <allow permission=".Delete" roles="Clerk" />
    
    
    <state id="draft" title="Draft - Parliament not yet Active">
        <!-- parliament -->
        <allow permission=".View" roles="Clerk" />
        <deny permission=".View" roles="Speaker" />
        <deny permission=".View" roles="Owner" />
        <deny permission=".View" roles="Signatory" />
        <deny permission=".View" roles="MP" />
        <deny permission=".View" roles="Minister" />
        <deny permission=".View" roles="Anonymous" />
        <allow permission=".Delete" roles="Owner" />
        <!-- group_membership -->
        <deny permission="group_membership.Edit" roles="Clerk" />
        <deny permission="group_membership.Add" roles="Clerk" />
        <deny permission="group_membership.Delete" roles="Clerk" />
    </state>
    
    <state id="active" title="Active Parliament" 
        like_state="draft"
        tags="public">
        <allow permission=".View" roles="Speaker Owner Signatory MP Minister Anonymous" />
        <deny permission=".Delete" roles="Owner" />
        <allow permission="group_membership.Edit" roles="Clerk" />
        <allow permission="group_membership.Add" roles="Clerk" />
        <allow permission="group_membership.Delete" roles="Clerk" />
    </state>
    
    <state id="dissolved" title="Parliament is Dissolved" 
        like_state="active"
        tags="public">
        <deny permission="group_membership.Edit" roles="Clerk" />
        <deny permission="group_membership.Add" roles="Clerk" />
        <deny permission="group_membership.Delete" roles="Clerk" />
    </state>
    
    
    <transition title="Create"
        source=""
        destination="draft"
        trigger="automatic"
    />
    
    <transition title="Activate"
        source="draft dissolved"
        destination="active"
        trigger="manual"
        roles="Clerk Speaker"
        require_confirmation="true"
    />
    
    <transition title="Dissolve"
        source="active"
        destination="dissolved"
        condition="has_end_date"
        trigger="manual"
        roles="Clerk Speaker"
        require_confirmation="true"
    />
    
    <transition title="Deactivate"
        source="active dissolved"
        destination="draft"
        trigger="manual"
        roles="Clerk Speaker"
        require_confirmation="true"
    />

</workflow>
