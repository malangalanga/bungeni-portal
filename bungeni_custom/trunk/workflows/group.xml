<?xml version="1.0"?>
<workflow title="Group Workflow"
    description="Workflow for Parliamentary Groups"
    tags="public"
    permission_actions="
        .View .Edit .Add .Delete
        government.View government.Edit government.Add government.Delete
        ministry.View ministry.Edit ministry.Add ministry.Delete
        office.View office.Edit office.Add office.Delete
        political_group.View political_group.Edit political_group.Add political_group.Delete
    "
    >
    
    <feature name="address" enabled="true" />
    
    <!-- global grants !+shared_workflow -->
    <allow permission="government.Edit" roles="Clerk" />
    <allow permission="government.Add" roles="Clerk" />
    <allow permission="government.Delete" roles="Clerk" />  
    <allow permission="ministry.Edit" roles="Clerk" />
    <allow permission="ministry.Add" roles="Clerk" />
    <allow permission="ministry.Delete" roles="Clerk" />  
    <allow permission="office.Edit" roles="Clerk" />
    <allow permission="office.Add" roles="Clerk" />
    <allow permission="office.Delete" roles="Clerk" />  
    <allow permission="political_group.Edit" roles="Clerk" />
    <allow permission="political_group.Add" roles="Clerk" />
    <allow permission="political_group.Delete" roles="Clerk" />

    
    <state id="draft" title="Draft - Group not yet Active">
        <allow permission=".View" roles="Clerk" />
        <deny permission=".View" roles="Speaker MP Minister Anonymous" />
        <!-- !+shared_workflow other group-type Views -->
        <allow permission="government.View" roles="Clerk" />
        <allow permission="ministry.View" roles="Clerk" />
        <allow permission="office.View" roles="Clerk" />
        <allow permission="political_group.View" roles="Clerk" />
        <deny permission="group_membership.Edit" roles="Clerk" />
        <deny permission="group_membership.Add" roles="Clerk" />
        <deny permission="group_membership.Delete" roles="Clerk" />
        <allow permission="address.Edit" roles="Clerk Owner" />
        <allow permission="address.Add" roles="Clerk Owner" />
        <allow permission="address.Delete" roles="Clerk Owner" />
    </state>
    
    <state id="active" title="Active Group" 
        like_state="draft"
        tags="public">
        <allow permission=".View" roles="Speaker MP Minister Anonymous" />
        <allow permission="group_membership.Edit" roles="Clerk" />
        <allow permission="group_membership.Add" roles="Clerk" />
        <allow permission="group_membership.Delete" roles="Clerk" />
    </state>
    
    <state id="dissolved" title="Group is Dissolved" 
        like_state="active"
        tags="public">
        <deny permission="group_membership.Edit" roles="Clerk" />
        <deny permission="group_membership.Add" roles="Clerk" />
        <deny permission="group_membership.Delete" roles="Clerk" />
        <deny permission="address.Edit" roles="Clerk Owner" />
        <deny permission="address.Add" roles="Clerk Owner" />
        <deny permission="address.Delete" roles="Clerk Owner" />
    </state>
    
    
    <transition title="Create"
        source=""
        destination="draft"
        trigger="automatic"
    />
    
    <transition title="Activate"
        source="draft dissolved"
        destination="active"
        trigger="manual"
        roles="Clerk Speaker"
        require_confirmation="true"
    />
    
    <transition title="Dissolve"
        source="active"
        destination="dissolved"
        condition="has_end_date"
        trigger="manual"
        roles="Clerk Speaker"
        require_confirmation="true"
    />
    
    <!-- !+ why back to "draft"? -->
    <transition title="Deactivate"
        source="active"
        destination="draft"
        trigger="manual"
        roles="Clerk Speaker"
        require_confirmation="true"
    />

</workflow>
