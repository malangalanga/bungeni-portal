<?xml version="1.0"?>
<workflow title="User Workflow"
    description=""
    permission_actions=".View .Edit .Add .Delete"
    >
    
    <feature name="address" enabled="true" />
    
    
    <state id="A" title="Active User">
        <allow permission=".Edit" roles="Authenticated" />
        <allow permission="delegation.Edit" roles="Owner" />
        <allow permission="delegation.Add" roles="Owner" />
        <allow permission="address.Edit" roles="Clerk Owner" />
        <allow permission="address.Add" roles="Clerk Owner" />
        <allow permission="address.Delete" roles="Clerk Owner" />
    </state>
    
    <state id="I" like_state="A" title="Inactive User">
        <deny permission=".Edit" roles="Authenticated" />
        <deny permission="delegation.Edit" roles="Owner" />
        <deny permission="delegation.Add" roles="Owner" />
        <deny permission="address.Edit" roles="Clerk Owner" />
        <deny permission="address.Add" roles="Clerk Owner" />
        <deny permission="address.Delete" roles="Clerk Owner" />
    </state>
    
    <state id="D" like_state="I" title="Deceased User" />
    
    
    <transition title="Create"
        source=""
        destination="A"
        trigger="automatic"
    />
    
    <transition title="Deactivate"
        source="A"
        destination="I"
        condition="not_has_date_of_death"
        trigger="manual"
        roles="Speaker"
        require_confirmation="true"
    />
    
    <transition title="Activate"
        source="I"
        destination="A"
        trigger="manual"
        roles="Speaker"
        require_confirmation="true"
    />
    
    <transition title="Move to Deceased"
        source="A I"
        destination="D"
        condition="has_date_of_death"
        trigger="manual"
        roles="Speaker"
        require_confirmation="true"
    />
    
    <transition title="Move from Deceased"
        source="D"
        destination="A"
        trigger="manual"
        roles="Speaker"
        require_confirmation="true"
    />

</workflow>
