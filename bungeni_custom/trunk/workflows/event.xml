<?xml version="1.0"?>
<workflow title="Event Workflow"
    description="Workflow for attached files"
    domain="bungeni"
    initial_state=""
    tags="draft private public">
    
    <!-- features -->
    <feature name="audit" enabled="true" />
    <feature name="version" enabled="true" />
    <feature name="attachment" enabled="true" />
    
    <!-- NO global grants -->
    
    <state id="draft" title="Draft Event" tags="draft private">
        <!-- event -->
        <deny permission="zope.View" role="bungeni.Clerk" />
        <deny permission="zope.View" role="bungeni.Speaker" />
        <grant permission="zope.View" role="bungeni.Owner" />
        <deny permission="zope.View" role="bungeni.Signatory" />
        <deny permission="zope.View" role="bungeni.MP" />
        <deny permission="zope.View" role="bungeni.Minister" />
        <deny permission="zope.View" role="bungeni.Anonymous" />
        <deny permission="bungeni.event.Edit" role="bungeni.Clerk" />
        <deny permission="bungeni.event.Edit" role="bungeni.Speaker" />
        <grant permission="bungeni.event.Edit" role="bungeni.Owner" />
        <deny permission="bungeni.event.Delete" role="bungeni.Clerk" />
        <deny permission="bungeni.event.Delete" role="bungeni.Speaker" />
        <grant permission="bungeni.event.Delete" role="bungeni.Owner" />
    </state>
    
    <state id="attached" title="Event" 
        publish="true"
        tags="public"
        permissions_from_parent="true" 
    />
    
    <state id="internal" title="Published Internal" like_state="draft">
        <!-- event -->
        <grant permission="zope.View" role="bungeni.Clerk" />
        <grant permission="zope.View" role="bungeni.Speaker" />
        <grant permission="zope.View" role="bungeni.Signatory" />
        <grant permission="zope.View" role="bungeni.MP" />
        <grant permission="zope.View" role="bungeni.Minister" />
        <grant permission="bungeni.event.Edit" role="bungeni.Clerk" />
        <grant permission="bungeni.event.Edit" role="bungeni.Speaker" />
        <deny permission="bungeni.event.Edit" role="bungeni.Owner" />
        <grant permission="bungeni.event.Delete" role="bungeni.Clerk" />
        <grant permission="bungeni.event.Delete" role="bungeni.Speaker" />
        <deny permission="bungeni.event.Delete" role="bungeni.Owner" />
    </state>
    
    <!-- !+inactive(mr, aug-2011) review usage and rename across the board
        currently being used in attachment, heading, event
        consider using "dropped", "obsoleted", "removed"...
    -->
    <state id="inactive" title="Inactive event" like_state="internal">
        <!-- event -->
        <deny permission="bungeni.event.Edit" role="bungeni.Clerk" />
        <deny permission="bungeni.event.Edit" role="bungeni.Speaker" />
    </state>
    
    
    <!-- !+IDENTICAL_TRANSITIONS(mr, sep-2011) attachment, address, event -->
    <!-- 
    When adding a child item to a parent item that is NOT in draft, we 
    take safer route of creating the sub-item in draft. But, as a simple 
    convenience for the common case of adding a child item to a parent that
    IS in draft, we simply jump to the more natural "parent-bound" state.
    -->
    <transition title="Create"
        source=""
        destination="draft"
        condition="context_parent_is_not_draft"
        trigger="automatic"
    />
    <transition title="Create"
        source=""
        destination="attached"
        condition="context_parent_is_draft"
        trigger="automatic"
    />
    
    <transition title="Publish"
        source="draft"
        destination="attached"
        trigger="manual"
        roles="bungeni.Owner"
    />
    
    <transition title="Publish Internal"
        source="draft"
        destination="internal"
        trigger="manual"
        roles="bungeni.Owner"
    />
    
    <transition title="Publish Internal"
        source="attached"
        destination="internal"
        condition="user_may_edit_context_parent"
        trigger="manual"
        roles="bungeni.Clerk bungeni.Owner"
    />
    
    <transition title="Re-publish"
        source="internal"
        destination="attached"
        condition="user_may_edit_context_parent"
        trigger="manual"
        roles="bungeni.Clerk bungeni.Owner"
    />
    
    <transition title="Deactivate"
        source="attached internal"
        destination="inactive"
        condition="user_may_edit_context_parent"
        trigger="manual"
        roles="bungeni.Clerk bungeni.Owner"
        require_confirmation="true"
    />

</workflow>
