<?xml version="1.0"?>
<workflow title="Event Workflow"
    description="Workflow for base Event"
    permission_actions=".View .Edit .Add .Delete"
    >
    
    <!-- sub-item: NO global grants -->
    
    <!-- features -->
    <feature name="audit" enabled="true" />
    <feature name="version" enabled="true" />
    <feature name="attachment" enabled="true" />
    
    <!-- workflow facets -->
    <facet name="draft_Clerk">
        <allow permission=".View" roles="ClerkSenate ClerkAssembly ClerkLegal MinistryMember" />
        <allow permission=".Edit" roles="ClerkSenate ClerkAssembly" />
        <allow permission=".Add" roles="ClerkSenate ClerkAssembly" />
        <allow permission=".Delete" roles="ClerkSenate ClerkAssembly" />
    </facet>
    <facet name="draft_Owner" note="!+rename">
        <allow permission=".View" roles="Drafter" />
        <allow permission=".Edit" roles="Drafter" />
        <allow permission=".Add" roles="Drafter" />
        <allow permission=".Delete" roles="Drafter" />
    </facet>
    <facet name="internal" default="true">
        <allow permission=".View" roles="Authenticated" />
        <allow permission=".Edit" roles="ClerkSenate ClerkAssembly SpeakerSenate SpeakerAssembly 
        MinistryMember" />
        <allow permission=".Add" roles="ClerkSenate ClerkAssembly SpeakerSenate SpeakerAssembly 
        MinistryMember" />
    </facet>
    <facet name="internal_frozen">
        <allow permission=".View" roles="Authenticated" />
    </facet>
    <facet name="public">
        <allow permission=".View" roles="Anonymous" />
        <allow permission=".Edit" roles="ClerkSenate ClerkAssembly" />
        <allow permission=".Add" roles="ClerkSenate ClerkAssembly" />
    </facet>
    <facet name="public_frozen">
        <allow permission=".View" roles="Anonymous" />
    </facet>

    <!-- workflow states -->    
    <state id="draft" title="Draft">
        <facet ref=".draft_Owner" />
    </state>
    
    <state id="bound_parent" title="Bound to Parent" permissions_from_parent="true" />
   
    <state id="internal" title="Internal">
        <facet ref=".internal" />
    </state>

    <state id="withdrawn" title="Withdrawn">
        <facet ref=".internal_frozen" />
    </state>
    
    <!-- workflow transision -->    
    <transition title="Create"
        source=""
        destination="draft"
        condition="context_parent_is_not_draft"
        trigger="automatic"
    />
    <transition title="Bound to Parent"
        source="draft internal"
        destination="bound_parent"
        trigger="manual"
        roles="ClerkSenate ClerkAssembly Owner"
        require_confirmation="true"
    />
    <transition title="Visible Internally"
        source="draft bound_parent"
        destination="internal"
        trigger="manual"
        roles="Owner"
        require_confirmation="true"
    />
    <transition title="Withdraw"
        source="internal bound_parent"
        destination="withdrawn"
        trigger="manual"
        roles="ClerkSenate ClerkAssembly Owner"
        require_confirmation="true"
    />

</workflow>
