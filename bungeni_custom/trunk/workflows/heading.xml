<?xml version="1.0"?>
<workflow title="Heading Workflow"
    description="Workflow for headings"
    tags="public tobescheduled"
    permission_actions=".View .Edit .Add .Delete"
    >

    <!-- global grants -->
    <allow permission=".Edit" roles="Clerk Speaker" />
    <allow permission=".Add" roles="Clerk Speaker" />
    
    
    <state id="inactive" title="Inactive heading obsolete">
        <!-- heading -->
        <allow permission=".View" roles="Clerk Speaker" />
        <deny permission=".View" roles="Owner Signatory MP Minister Anonymous" />
    </state>
    
    <state id="public" title="Public" 
        like_state="inactive"
        tags="public tobescheduled">
        <allow permission=".View" roles="Owner Signatory MP Minister Anonymous" />
    </state>
    
    
    <transition title="Create"
        source=""
        destination="public"
        trigger="automatic"
    />
    
    <transition title="Deactivate"
        source="public"
        destination="inactive"
        trigger="manual"
        roles="Clerk Speaker"
        require_confirmation="true"
    />
    
    <transition title="Reactivate"
        source="inactive"
        destination="public"
        trigger="manual"
        roles="Clerk Speaker"
        require_confirmation="true"
    />

</workflow>
