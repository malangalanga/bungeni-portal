<?xml version="1.0"?>
<workflow title="Motion Workflow" 
    description="A Motion"
    tags="draft private public
        approved tobescheduled scheduled
        actionclerk actionmp
        terminal succeed fail
    "
    permission_actions=".View .Edit .Add .Delete"
    >
    
    <!-- features -->
    <feature name="audit" enabled="true" />
    <feature name="version" enabled="true" />
    <feature name="attachment" enabled="true" />
    <feature name="event" enabled="true" />
    <feature name="signatory" enabled="true">
        <parameter name="min_signatories" value="1" />
        <parameter name="open_states" value="admissible" />
    </feature>
    <feature name="schedule" enabled="true" />
    <feature name="workspace" enabled="true" />
    <feature name="notification" enabled="true" />
    <feature name="download" enabled="true" />
    <feature name="group_assignment" enabled="true" />
    
    
    <!-- global grants -->
    <allow permission=".Add" roles="Clerk MP" />
    
    
    <state id="working_draft" title="Working Draft" tags="draft private">
        <allow permission=".View" roles="Clerk" />
        <allow permission=".Edit" roles="Clerk" />
        <allow permission=".Delete" roles="Clerk" />
        <allow permission="signatory.Add" roles="Clerk" />
        <allow permission="signatory.Delete" roles="Clerk" />
        <allow permission="attachment.View" roles="Clerk" />
        <allow permission="attachment.Edit" roles="Clerk" />
        <allow permission="attachment.Add" roles="Clerk" />
        <allow permission="attachment.Delete" roles="Owner" />
        <allow permission="event.View" roles="Clerk Speaker Signatory MP Minister" />
        <allow permission="event.Edit" roles="Clerk Speaker" />
        <allow permission="event.Add" roles="Clerk Speaker" />
        <allow permission="event.Delete" roles="Clerk Speaker" />
    </state>
    
    <!-- like_state="working_draft" -->
    <state id="draft" title="Draft" tags="draft private">
        <allow permission=".View" roles="Owner" />
        <allow permission=".Edit" roles="Owner" />
        <allow permission=".Delete" roles="Owner" />
        <allow permission="signatory.Add" roles="Owner" />
        <allow permission="signatory.Delete" roles="Owner" />
        <allow permission="attachment.Edit" roles="Owner" />
        <allow permission="attachment.Add" roles="Owner" />
        <allow permission="attachment.View" roles="Clerk" />
        <allow permission="attachment.Delete" roles="Owner" />
        <allow permission="event.View" roles="Clerk Speaker Signatory MP Minister" />
        <allow permission="event.Edit" roles="Clerk Speaker" />
        <allow permission="event.Add" roles="Clerk Speaker" />
        <allow permission="event.Delete" roles="Clerk Speaker" />
    </state>
    
    <!-- like_state="draft" -->
    <state id="submitted_signatories" title="Submitted to Signatories"
            version="true" tags="actionmp"
        >
        <allow permission=".View" roles="Owner" />
        <allow permission=".View" roles="Signatory" />
        <allow permission="signatory.Add" roles="Owner" />
        <allow permission="attachment.View" roles="Clerk" />
        <allow permission="event.View" roles="Clerk Speaker Signatory MP Minister" />
        <allow permission="event.Edit" roles="Clerk Speaker" />
        <allow permission="event.Add" roles="Clerk Speaker" />
        <allow permission="event.Delete" roles="Clerk Speaker" />
    </state>
    
    <!-- like_state="draft" -->
    <state id="redraft" title="Redraft"
            note="document under review before resubmission"
            version="true"
        >
        <allow permission=".View" roles="Owner" />
        <allow permission=".Edit" roles="Owner" />
        <allow permission="signatory.Add" roles="Owner" />
        <allow permission="signatory.Delete" roles="Owner" />
        <allow permission="attachment.Edit" roles="Owner" />
        <allow permission="attachment.Add" roles="Owner" />
        <allow permission="attachment.View" roles="Clerk" />
        <allow permission="attachment.Delete" roles="Owner" />
        <allow permission="event.View" roles="Clerk Speaker Signatory MP Minister" />
        <allow permission="event.Edit" roles="Clerk Speaker" />
        <allow permission="event.Add" roles="Clerk Speaker" />
        <allow permission="event.Delete" roles="Clerk Speaker" />
    </state>
    
    <!-- like_state="submitted_signatories" -->
    <state id="withdrawn_signatory" title="Dropped" 
            note="motion has been withdrawn before submission to house"
        >
        <allow permission=".View" roles="Owner Signatory" />
        <allow permission="attachment.View" roles="Clerk" />
        <allow permission="event.View" roles="Clerk Speaker Signatory MP Minister" />
        <allow permission="event.Edit" roles="Clerk Speaker" />
        <allow permission="event.Add" roles="Clerk Speaker" />
        <allow permission="event.Delete" roles="Clerk Speaker" />
    </state>
    
    <!-- like_state="submitted_signatories" -->
    <state id="submitted" title="Submitted" version="true" tags="actionclerk">
        <allow permission=".View" roles="Clerk Speaker Owner Signatory" />
        <allow permission="attachment.View" roles="Clerk" />
        <allow permission="event.View" roles="Clerk Speaker Signatory MP Minister" />
        <allow permission="event.Edit" roles="Clerk Speaker" />
        <allow permission="event.Add" roles="Clerk Speaker" />
        <allow permission="event.Delete" roles="Clerk Speaker" />
    </state>
    
    <!-- like_state="submitted" -->
    <state id="received" title="Received by Clerks Office" tags="actionclerk">
        <allow permission=".View" roles="Clerk Speaker Owner Signatory CommitteeMember" />
        <allow permission=".Edit" roles="Clerk CommitteeMember" />
        <allow permission="signatory.Delete" roles="Clerk" />
        <allow permission="attachment.View" roles="Clerk" />
        <allow permission="attachment.Edit" roles="Clerk" />        
        <allow permission="attachment.Add" roles="Clerk" />
        <allow permission="attachment.Delete" roles="Clerk" />
        <allow permission="event.View" roles="Clerk Speaker Signatory MP Minister" />
        <allow permission="event.Edit" roles="Clerk Speaker" />
        <allow permission="event.Add" roles="Clerk Speaker" />
        <allow permission="event.Delete" roles="Clerk Speaker" />
        <allow permission="group_assignment.Add" roles="Clerk" />
        <allow permission="group_assignment.View" roles="Clerk" />
        <allow permission="group_assignment.Edit" roles="Clerk" />
        <allow permission="group_assignment.Delete" roles="Clerk" />
    </state>
    
    <!-- like_state="submitted" -->
    <state id="clarification_required" title="Requires Clarification to Receive"
            version="true" tags="actionmp"
        >
        <allow permission=".View" roles="Clerk Speaker Owner Signatory" />
        <allow permission="attachment.View" roles="Clerk" />
        <allow permission=".Edit" roles="Owner" />
        <allow permission="signatory.Add" roles="Owner" />
        <allow permission="signatory.Delete" roles="Owner" />
        <allow permission="attachment.Edit" roles="Owner" />
        <allow permission="attachment.Add" roles="Owner" />
        <allow permission="event.View" roles="Clerk Speaker Signatory MP Minister" />
        <allow permission="event.Edit" roles="Clerk Speaker" />
        <allow permission="event.Add" roles="Clerk Speaker" />
        <allow permission="event.Delete" roles="Clerk Speaker" />
    </state>
    
    <!-- like_state="submitted" -->
    <state id="completed" title="Submitted to the Speaker" version="true">
        <allow permission=".View" roles="Clerk Speaker Owner Signatory" />
        <allow permission=".Edit" roles="Speaker" />
        <allow permission="signatory.Delete" roles="Speaker" />
        <allow permission="attachment.View" roles="Clerk" />
        <allow permission="attachment.Edit" roles="Speaker" />
        <allow permission="attachment.Add" roles="Speaker" />
        <allow permission="event.View" roles="Clerk Speaker Signatory MP Minister" />
        <allow permission="event.Edit" roles="Clerk Speaker" />
        <allow permission="event.Add" roles="Clerk Speaker" />
        <allow permission="event.Delete" roles="Clerk Speaker" />
    </state>
    
    
    <state id="incomplete" title="Requires Clarification to Approve"
        version="true"
        like_state="received"
        tags="actionclerk"
    />
    
    <!-- like_state="submitted" -->
    <state id="withdrawn_internal" title="Withdrawn" tags="terminal fail">
        <allow permission=".View" roles="Clerk Speaker Owner Signatory" />
        <allow permission="attachment.View" roles="Clerk" />
        <allow permission="event.View" roles="Clerk Speaker Signatory MP Minister" />
    </state>
    
    <state id="inadmissible" title="Inadmissible" 
        like_state="withdrawn_internal"
        tags="terminal fail">
    </state>
    
    <!-- like_state="submitted" -->
    <state id="admissible" title="Admissible" version="true" tags="public approved">
        <allow permission=".View" roles="Clerk Speaker Owner Signatory MP Minister Anonymous" />
        <allow permission="attachment.View" roles="Clerk" />
        <allow permission="event.View" roles="Clerk Speaker Signatory MP Minister" />
        <allow permission="event.Edit" roles="Clerk Speaker" />
        <allow permission="event.Add" roles="Clerk Speaker" />
        <allow permission="event.Delete" roles="Clerk Speaker" />
    </state>
    
    <state id="schedule_pending" title="Schedule pending"
        like_state="admissible"
        tags="public tobescheduled"
    />
    
    <state id="scheduled" title="Scheduled" 
        like_state="admissible"
        tags="public scheduled">
    </state>
    
    <!-- like_state="admissible" -->
    <state id="adopted" title="Adopted" version="true" tags="public terminal succeed">
        <allow permission=".View" roles="Clerk Speaker Owner Signatory MP Minister Anonymous" />
        <allow permission="attachment.View" roles="Clerk" />
        <allow permission="event.View" roles="Clerk Speaker Signatory MP Minister" />
    </state>
    
    <state id="adopted_amendments" title="Adopted with amendments"
        version="true"
        like_state="adopted"
        tags="public terminal succeed"
    />
    
    <state id="adjourned" title="Debate adjourned" 
        like_state="admissible"
        tags="public approved"
        note="a motion was debated and the debate adjourned"
    />
    
    <state id="deferred" title="Deferred" 
        like_state="admissible"
        tags="public approved"
        note="An admissable motion that cannot be debated.">
    </state>
    
    <state id="elapsed" title="Elapsed" 
        like_state="adopted" 
        tags="public terminal fail"
        note="A defered motion that was not debated"
    />
    
    <state id="dropped" title="Dropped" 
        like_state="adopted" 
        tags="public terminal fail"
        note="A motion was scheduled, but dropped e.g. becuase no show of MP."
    />
    
    <state id="rejected" title="Rejected" 
        like_state="adopted"
        tags="public terminal fail">
    </state>
    
    <state id="withdrawn" title="Withdrawn" 
        like_state="adopted"
        tags="public terminal fail"
    />
    
    
    <transition title="Create Motion"
        source=""
        destination="draft"
        condition="user_is_context_owner"
        trigger="automatic"
    />
    
    <transition title="Create Motion (On behalf of)"
        source=""
        destination="working_draft"
        condition="user_is_not_context_owner"
        trigger="automatic"
    />
    
    <transition title="Submit"
        source="draft submitted_signatories redraft"
        destination="submitted"
        condition="pi_signatories_check"
        trigger="manual"
        roles="Owner"
    />
    
    <transition title="Submit"
        source="working_draft"
        destination="submitted"
        condition="pi_signatories_check"
        trigger="manual"
        roles="Clerk"
    />
    
    <transition title="Submit to Signatories"
        source="draft redraft"
        destination="submitted_signatories"
        condition="pi_has_signatories"
        roles="Owner"
        trigger="manual"
    />
    
    <transition title="Redraft"
        source="submitted_signatories"
        destination="redraft"
        condition="user_is_context_owner"
        roles="Owner"
        trigger="manual"
    />

    <transition title="Drop"
        source="redraft submitted_signatories"
        destination="withdrawn_signatory"
        grouping_unique_sources="withdrawn"
        condition="user_is_context_owner"
        roles="Owner"
        trigger="manual"
    />

    <transition title="Receive" 
        source="submitted"
        destination="received" 
        condition=""
        trigger="manual" 
        roles="Clerk"
    />
    
    <transition title="Require Clarification to Receive"
        source="received incomplete" 
        destination="clarification_required"
        condition=""
        trigger="manual"
        roles="Clerk"
        require_confirmation="true"
    />

    <transition title="Redraft (Automatic)"
        source="clarification_required"
        destination="redraft"
        condition="pi_has_signatories"
        trigger="automatic"
        note="incomplete document needs to be resubmitted to signatories"
    />

    <transition title="Complete"
        source="received" 
        destination="completed" 
        condition=""
        trigger="manual"
        roles="Clerk"
    />
    
    <transition title="Approve" 
        source="completed"
        destination="admissible" 
        condition=""
        trigger="manual"
        roles="Speaker"
    />
    
    <transition title="Disapprove"
        source="completed"
        destination="inadmissible"
        condition=""
        trigger="manual"
        roles="Speaker"
        require_confirmation="true"
    />
    
    <transition title="Make available for scheduling" 
        source="admissible deferred adjourned"
        destination="schedule_pending"
        trigger="manual"
        roles="Clerk"
    />
    
    <transition title="Require Recomplete to Approve"
        source="completed" 
        destination="incomplete" 
        condition=""
        trigger="manual"
        roles="Speaker"
        require_confirmation="true"
    />
    
    <transition title="Recomplete"
        source="incomplete"
        destination="completed"
        condition=""
        trigger="manual"
        roles="Clerk"
    />
    
    <transition title="Resubmit"
        source="clarification_required"
        destination="submitted"
        condition=""
        trigger="manual"
        roles="Owner"
    />
    
    <transition title="Defer"
        source="admissible"
        destination="deferred"
        condition=""
        trigger="manual"
        roles="Clerk"
    />
    
    <transition title="Elapse"
        source="deferred"
        destination="elapsed"
        condition=""
        trigger="manual"
        roles="Clerk"
        require_confirmation="true"
    />
    
    <transition title="Schedule"
        source="schedule_pending"
        destination="scheduled" 
        condition="is_scheduled"
        trigger="system" 
        roles="Clerk"
    />
    
    <transition title="Re-schedule" 
        source="scheduled"
        destination="schedule_pending"
        condition=""
        trigger="system"
        roles="Clerk"
    />
    
    <transition title="Revert to admissible" 
        source="schedule_pending"
        destination="admissible"
        condition=""
        trigger="manual"
        roles="Clerk"
    />
    
    <transition title="Drop" 
        source="scheduled"
        destination="dropped"
        condition=""
        trigger="manual"
        roles="Clerk"
    />
    
    <transition title="Adjourn debate"
        source="scheduled"
        destination="adjourned"
        condition=""
        trigger="manual"
        roles="Clerk"
    />
    
    <transition title="Adopt"
        source="scheduled" 
        destination="adopted"
        condition=""
        trigger="manual"
        roles="Clerk"
        require_confirmation="true"
    />
    
    <transition title="Adopt with amendments"
        source="scheduled"
        destination="adopted_amendments"
        condition=""
        trigger="manual"
        roles="Clerk"
        require_confirmation="true"
    />
    
    <transition title="Reject a scheduled motion"
        source="scheduled"
        destination="rejected"
        condition=""
        trigger="manual"
        roles="Speaker"
        require_confirmation="true"
    />
    
    <transition title="Withdraw" 
        source="submitted received completed clarification_required"
        destination="withdrawn_internal"
        grouping_unique_sources="withdrawn"
        condition=""
        trigger="manual"
        roles="Clerk Owner"
        require_confirmation="true" 
    />
    
    <transition title="Withdraw"
        source="admissible scheduled deferred adjourned schedule_pending"
        destination="withdrawn"
        grouping_unique_sources="withdrawn"
        condition=""
        trigger="manual"
        roles="Clerk Owner"
        require_confirmation="true"
    />

</workflow>
