<?xml version="1.0"?>
<workflow title="Address Workflow"
    description="Workflow for addresses"
    note="Used for both bungeni.models types: UserAddress, GroupAddress"
    permission_actions=".View .Edit .Add .Delete"
    >
    
    <!-- sub-item: NO global grants -->
    
    
    <!-- workflow facets -->
    <facet name="draft">
        <allow permission=".View" roles="ClerkSenate ClerkAssembly Owner" />
        <allow permission=".Edit" roles="ClerkSenate ClerkAssembly Owner" />
        <allow permission=".Delete" roles="ClerkSenate ClerkAssembly Owner" />
    </facet>
    <facet name="internal" default="true">
        <allow permission=".View" roles="Authenticated" />
        <allow permission=".Edit" roles="ClerkSenate ClerkAssembly Owner" />
        <allow permission=".Add" roles="ClerkSenate ClerkAssembly Owner" />
        <allow permission=".Delete" roles="ClerkSenate ClerkAssembly Owner" />
    </facet>
    <facet name="public">
        <allow permission=".View" roles="Authenticated" />
        <allow permission=".Edit" roles="ClerkSenate ClerkAssembly Owner" />
        <allow permission=".Add" roles="ClerkSenate ClerkAssembly Owner" />
        <allow permission=".Delete" roles="ClerkSenate ClerkAssembly Owner" />
    </facet>
    <facet name="withdrawn">
        <allow permission=".View" roles="ClerkSenate ClerkAssembly Owner" />
    </facet>
    
   <!-- workflow states -->

    <state id="draft" title="Draft">
        <facet ref=".draft" />
    </state>
    <state id="as_parent" title="Address" permissions_from_parent="true" />
    <state id="internal" title="Published Internal" note="Visible to bungeni users">
        <facet ref=".internal" />
    </state>
    <state id="withdrawn" title="Withdrawn" note="Visible to bungeni users">
        <facet ref=".withdrawn" />
    </state>
  
   <!-- workflow transition -->

    <transition title="Create"
        source=""
        destination="draft"
        trigger="automatic"
    />
    <transition title="Publish"
        source="draft"
        destination="as_parent"
        trigger="manual"
        roles="Owner"
    />
    <transition title="Publish Internal"
        source="draft as_parent"
        destination="internal"
        trigger="manual"
        roles="Owner"
    />
    <transition title="Re-publish"
        source="internal"
        destination="as_parent"
        trigger="manual"
        roles="ClerkSenate ClerkAssembly Owner"
    />
        <transition title="Withdraw"
        source="internal as_parent"
        destination="withdrawn"
        trigger="manual"
        roles="ClerkSenate ClerkAssembly Owner"
    />
</workflow>

