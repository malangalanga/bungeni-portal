<!-- convention status-subject for the subject title to be use in the email -->
<metal:block define-macro="submitted-subject">
  <tal:block i18n:translate="">Tabled document has been submitted :
    <span tal:replace="options/title"/>
  </tal:block>
</metal:block>
<metal:block define-macro="submitted-body">
  <tal:block i18n:translate="">The Tabled document
    <span tal:replace="options/title"/>
      was submitted on 
    <span tal:replace="options/status_date"/>
  </tal:block>
</metal:block>

