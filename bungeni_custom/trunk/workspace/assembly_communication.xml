<workspace>

    <state id="draft">
        <tab id="draft" roles="Drafter" />
    </state>
    <state id="submitted">
        <tab id="inbox" roles="ClerkAssembly" />
        <tab id="pending" roles="Owner" />
    </state>
    <state id="received">
        <tab id="inbox" roles="ClerkAssembly"/>
        <tab id="pending" roles="SpeakerAssembly Owner" />
    </state>
    <state id="require_clarifications">
        <tab id="inbox" roles="Owner " />
        <tab id="pending" roles="SpeakerAssembly ClerkAssembly" />
    </state>
    <state id="published">
        <tab id="archive"
	     roles="Owner ClerkAssembly SpeakerAssembly" />
    </state>
</workspace>
