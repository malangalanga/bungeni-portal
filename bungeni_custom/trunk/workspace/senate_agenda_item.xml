<workspace>

    <state id="draft">
        <tab id="draft" roles="Drafter" />
    </state>
    <state id="submitted">
        <tab id="inbox" roles="ClerkSenate" />
        <tab id="pending" roles="Owner" />
    </state>
    <state id="clarification_required">
        <tab id="inbox" roles="Owner" />
        <tab id="pending" roles="ClerkSenate" />
    </state>
     <state id="inadmissible">
        <tab id="archive" roles="SpeakerSenate ClerkSenate Owner" />
    </state>
    <state id="admissible">
        <tab id="schedule" roles="SpeakerSenate ClerkSenate" />
        <tab id="pending" roles="Owner Signatory" />
    </state>
    <state id="scheduled">
        <tab id="schedule" roles="SpeakerSenate ClerkSenate" />
        <tab id="pending" roles="Owner Signatory" />
    </state>
    <state id="adjourned">
        <tab id="schedule" roles="SpeakerSenate ClerkSenate" />
        <tab id="pending" roles="Owner Signatory" />
    </state>
    <state id="dropped">
        <tab id="archive" roles="SpeakerSenate Owner" />
    </state>
    <state id="withdrawn">
        <tab id="archive" roles="Owner ClerkSenate SpeakerSenate" />
    </state>

</workspace>

