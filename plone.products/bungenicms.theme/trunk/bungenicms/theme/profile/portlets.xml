<?xml version="1.0"?>
<portlets
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="plone">
   
    <!-- Removing the login portlet from the left bar -->     
    <assignment name="login"  
        remove="true"
        type="portlets.Login"             
        manager="plone.leftcolumn"
        category="context"
        key="/"
    />   
        
    <!-- Removing the navigation portlet from the left bar -->        
    <assignment name="navigation"    
        remove="true"   
        type="portlets.Navigation"          
        manager="plone.leftcolumn"
        category="context"
        key="/"
    />
    
    <!-- Removing the news portlet from the right bar -->         
    <assignment name="news"  
        remove="true"     
        manager="plone.rightcolumn"
        category="context"
        key="/"
        type="portlets.News"
     />      
    
    <!-- Removing the calendar portlet from the right bar -->         
    <assignment name="calendar"  
        remove="true"     
        manager="plone.rightcolumn"
        category="context"
        key="/"
        type="portlets.Calendar"
     />
     
</portlets>
