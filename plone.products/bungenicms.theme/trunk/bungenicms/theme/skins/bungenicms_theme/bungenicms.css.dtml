/*
  <dtml-with base_properties>
  <dtml-call "REQUEST.set('portal_url', portal_url())">
*/

body {
  font: 69% Verdana, sans-serif;
  color: #000000;
  margin: 0;
  padding: 0;
  text-align:justify;
}

#content {
    font-size: 125% !important;
    padding: 1em 1em 2em 1em !important;
    background: White;
}

#content-core,
#content-core div p {
    text-align: justify !important;
}

#content-core h1, 
#content-core h2 {
    text-align: justify !important; 
    width: 100% !important
}


h1, h2 {
  color: #C8631B;
}

a span.hovertooltip {
  display: none;
}
 
a:hover {
  background-color: #EEEEEE;
}

/* The above hover change defeats the
  IE/Win display changing bug */
a:hover span.hovertooltip {
  position: absolute;
  display: block;
  background: #f4e0b5;
  border: 1px solid #FBAE0A;
  color: #6A0803;
}

body.popup {
  background-color:#ffffff;
}

ul#portal-globalnav {
  padding:0.5px 0 0 2em;

}

.visualGhosted {
  opacity: 0.2;
  moz-opacity: 0.2;
  khtml-opacity: 0.2;
  filter: alpha(opacity=20);
}

/* Handling external links */
#content a.link-external,
#content span.link-external a {
  background: none;
}

#content span.link-https a {
  background: none;
}

#send_button {
  float: right;
  padding: 4px 5px 2px 2px;
}

#print_button {
  float: right;
  padding: 4px 0px 2px 2px;
}

#export_button {
  float: right;
  padding: 4px 10px 2px 2px;
}

.blockitem {
    margin-top: 1em;
    background: url(info_16.png) 2px 2px no-repeat;
    padding-left: 23px;
}
.blockitem dt {
}
.blockitem dd {
    padding: 0;
    margin: 0;
    color: #444;
}
.indItem .description {
    font-weight: normal;
}
#portal-subnavbar {
    float: left;
    margin: .35em 0 0 .75em;
}
#portal-subnavbar li a {
    border-color: none !important;
    border-width: 0 !important;
    border-style: none !important;
    padding: 0 1em 0 0 !important;
}

#slider, #slider li {
    height:160px !important;
    width:90% !important;
}

#slider img {
    border:1px solid black;
    float:left;
    margin:0 0.5em 0.5em 0;
}

#content .slide-news-content p.documentDescription {
    color:#222222;
    font-size:105%;
    font-weight:normal;
    text-align:left;
}

#content .news-slide h1.documentFirstHeading {
    font-size:130%;
    text-align:left;
    margin-top: 1em;
}

#content .slide-news-content div {
    color:#444444;
    line-height:16px;
    margin:0.5em 0;
    text-align:left; ****
}

#portal-personaltools li.navigation {
    float: left;
    margin: 0 2em 0 0;
    padding: 0;
}

#portal-personaltools li.navigation.selected {
    font-weight: bold;
}

#personaltools-dashboard,
#personaltools-preferences {
    display: none !important;
}

.documentDescription, .description {
    display: block !important;
    font-weight: normal;
    line-height: 1.5em !important;
    margin: 0 0 0.5em !important;
    width: 100% !important;
}

p.bodyparagraph {
    color: black;
    margin: 0 0 6px;
    padding: 2px;
    text-align: justify !important;
}

#collage .block_1{
    width: 22.5% !important;
}
#collage .block_2{
    width: 44.5% !important;
}
#collage .block_3 {
    width: 30.5% !important;
}

.featured_content td {
    padding-right: 0.5em !important;
}

#collage .block_2 div.main-column h1 {
    text-align: left !important;
    margin: 20px auto;
}


/* </dtml-with> */
