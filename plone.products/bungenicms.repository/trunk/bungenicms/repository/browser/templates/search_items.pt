<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="bungenicms.repository">
<body>
<metal:content-core fill-slot="content-core">
<metal:block define-macro="content-core"
                    tal:define="kssClassesView context/@@kss_field_decorator_view;
                                getKssClasses nocall:kssClassesView/getKssClassesInlineEditable;
                                templateId template/getId">
                <h2 i18n:translate="bungenicms.repository_search_title">Repository Search</h2>
                <div tal:condition="view/hasFilter">
                    <tal:block 
                    tal:define="results view/getSearchResults">
                        <h3 tal:content="results/search_message"></h3>
                        <ol tal:condition="results/search_results">
                            <metal:block
                            tal:repeat="result results/search_results">
                                <li>
                                    <img tal:attributes="src string:${context/portal_url}/${result/getIcon}"/>
                                    <a tal:attributes="href result/getURL;
                                    title result/Title"
                                    tal:content="result/Title|result/getId">
                                    No title
                                    </a>
                                </li>
                            </metal:block>
                        </ol>
                    </tal:block>
                </div>
</metal:block>
</metal:content-core>

</body>
</html>
