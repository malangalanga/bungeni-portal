   <browser:page
     name="add"
     for="bungeni.models.interfaces.IVenueContainer"
     class=".common.AddForm"
     permission="bungeni.venue.Add"
     layer="..interfaces.IWorkspaceSchedulingSectionLayer"
     />
   <browser:page
     name="edit"
     for="bungeni.models.interfaces.IVenue"
     class=".common.EditForm"
