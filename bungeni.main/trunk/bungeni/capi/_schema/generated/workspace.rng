<grammar xmlns="http://relaxng.org/ns/structure/1.0">
  <include href="common.rng"/>
  <start>
    <ref name="WORKSPACE"/>
  </start>
  <define name="WORKSPACE">
    <element name="workspace">
      <attribute name="id"/>
      <oneOrMore>
        <ref name="STATE"/>
      </oneOrMore>
    </element>
  </define>
  <define name="STATE">
    <element name="state">
      <attribute name="id"/>
      <oneOrMore>
        <ref name="TAB"/>
      </oneOrMore>
    </element>
  </define>
  <define name="TAB">
    <element name="tab">
      <attribute name="id"/>
      <attribute name="roles">
        <ref name="SPACE_SEPARATED_TOKENS"/>
      </attribute>
    </element>
  </define>
</grammar>
