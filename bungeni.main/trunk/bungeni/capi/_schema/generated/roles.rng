<grammar xmlns="http://relaxng.org/ns/structure/1.0">
  <start>
    <ref name="ROLES"/>
  </start>
  <define name="ROLES">
    <element name="roles">
      <optional>
        <attribute name="note"/>
      </optional>
      <oneOrMore>
        <ref name="ROLE"/>
      </oneOrMore>
    </element>
  </define>
  <define name="ROLE">
    <element name="role">
      <attribute name="id"/>
      <attribute name="title"/>
      <optional>
        <attribute name="note"/>
      </optional>
      <zeroOrMore>
        <ref name="SUBROLE"/>
      </zeroOrMore>
    </element>
  </define>
  <define name="SUBROLE">
    <element name="subrole">
      <attribute name="id"/>
      <attribute name="title"/>
      <optional>
        <attribute name="note"/>
      </optional>
    </element>
  </define>
</grammar>
