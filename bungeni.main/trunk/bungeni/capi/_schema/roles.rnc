#   sudo apt-get upgrade trang # first time -> install
#   trang -I rnc -O rng roles.rnc generated/roles.rng
#
# $Id$

grammar {
    start = ROLES
    
    ROLES = element roles {
        attribute note { text }?,
        
        ROLE+
    }
    
    ROLE = element role {
        attribute id { text },
        attribute title { text },
        attribute note { text }?,
        
        SUBROLE*
    }
    
    SUBROLE = element subrole {
        attribute id { text },
        attribute title { text },
        attribute note { text }?
    }
}

