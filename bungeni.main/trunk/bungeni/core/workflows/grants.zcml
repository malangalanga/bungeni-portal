<?xml version="1.0"?>
<configure xmlns="http://namespaces.zope.org/zope"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    i18n_domain="bungeni.core">
  <!-- question workflow permissions -->
  <grant permission="bungeni.question.Submit" role="bungeni.Owner"/>
  <grant permission="bungeni.question.Receive" role="bungeni.Clerk"/>
  <grant permission="bungeni.question.clerk.Review" role="bungeni.Clerk"/>
  <grant permission="bungeni.question.speaker.Review"  role="bungeni.Speaker"/>
  <grant permission="bungeni.question.Schedule" role="bungeni.Clerk"/>
  <grant permission="bungeni.question.Respond" role="bungeni.Clerk"/>
  <grant permission="bungeni.question.Answer" role="bungeni.Clerk"/>
    <grant permission="bungeni.question.Withdraw" role="bungeni.Owner"/>
    <grant permission="bungeni.question.Withdraw" role="bungeni.Clerk"/>
  <grant permission="bungeni.question.Write_answer" role="bungeni.Minister" />
  <grant permission="bungeni.question.Elapse" role="bungeni.Clerk"/>
  <grant permission="bungeni.question.Elapse" role="bungeni.Speaker"/>
  <!-- response workflow permissions -->
  <grant permission="bungeni.response.Submit" role="bungeni.Minister"/>
  <grant permission="bungeni.response.Complete" role="bungeni.Clerk"/>
    <grant permission="bungeni.response.RevertTransitions" role="bungeni.Clerk" />

  
    <!-- tabled document -->
    <grant permission="bungeni.tableddocument.Submit" role="bungeni.Owner"/>
    <grant permission="bungeni.tableddocument.Receive" role="bungeni.Clerk"/>
    <grant permission="bungeni.tableddocument.clerk.Review" role="bungeni.Clerk"/>
    <grant permission="bungeni.tableddocument.speaker.Review"  role="bungeni.Speaker"/>
    <grant permission="bungeni.tableddocument.Schedule" role="bungeni.Clerk"/>
    <grant permission="bungeni.tableddocument.Table" role="bungeni.Clerk"/>
    <grant permission="bungeni.tableddocument.Table" role="bungeni.Speaker"/>
    <grant permission="bungeni.tableddocument.Table" role="bungeni.Minister"/>
    <grant permission="bungeni.tableddocument.Table" role="bungeni.MP"/>
    <grant permission="bungeni.tableddocument.Withdraw" role="bungeni.Owner"/>
    <grant permission="bungeni.tableddocument.Withdraw" role="bungeni.Clerk"/>
  
  <!-- Group workflow permissions -->
  <grant permission="bungeni.group.Manage" role="bungeni.Clerk" />
  <grant permission="bungeni.group.Manage" role="bungeni.Speaker" />
  
  <grant permission="bungeni.sitting.ChangeStatus" role="bungeni.Clerk"/>
  <grant permission="bungeni.sitting.ChangeStatus" role="bungeni.Speaker"/>
  
  <!-- event items -->
  <grant permission="bungeni.event.Deactivate" role="bungeni.Clerk"/>
  <grant permission="bungeni.event.Deactivate" role="bungeni.Speaker"/>

  <!-- headings -->
  <grant permission="bungeni.heading.Deactivate" role="bungeni.Clerk"/>
  <grant permission="bungeni.heading.Deactivate" role="bungeni.Speaker"/>
          
  <!-- users -->
  <grant permission="bungeni.user.Manage" role="bungeni.Speaker"/>
          
</configure>
