<?xml version="1.0"?>
<workflow id="heading_workflow"
    title="heading workflow"
    description="Workflow for headings"
    domain="bungeni.ui"
    initial_state="">
    
    <state id="inactive" title="Inactive heading obsolete">
        <!-- heading -->
        <grant permission="zope.View" role="bungeni.Clerk" />
        <grant permission="zope.View" role="bungeni.Speaker" />
        <deny permission="zope.View" role="bungeni.Everybody" /> 
        <deny permission="zope.View" role="bungeni.Anybody" /> 
    </state>
    
    <state id="public" like_state="inactive" title="Public">
        <!-- heading -->
        <grant permission="zope.View" role="bungeni.Everybody" /> 
        <grant permission="zope.View" role="bungeni.Anybody" />
    </state>
    
    
    <transition id="create"
        title="Create"
        source=""
        destination="public"
        trigger="automatic"
    />
    
    <transition id="deactivate"
        title="Deactivate"
        source="public"
        destination="inactive"
        trigger="manual"
        roles="bungeni.Clerk bungeni.Speaker"
        require_confirmation="true"
    />
    
    <transition id="reactivate"
        title="Re activate"
        source="inactive"
        destination="public"
        trigger="manual"
        roles="bungeni.Clerk bungeni.Speaker"
        require_confirmation="true"
    />

</workflow>
