<?xml version="1.0"?>
<configure xmlns="http://namespaces.zope.org/zope"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    i18n_domain="bungeni">
    
    <!-- 
        !+DOMAIN_SCHEMA(mr, aug-2010) keep in sync with domain.py, unittests?
    -->
    
    <!-- document -->
    
    <class class=".domain.Doc">
        <!-- domain / orm / schema -->
        <require permission="zope.View"
            attributes="
                amc_signatories
                amc_attachments
                amc_events
                    assignedgroups
                    submission_date
                    admissible_date
                                    
                owner
                files
                signatories
                attachments
                events
                
                doc_id
                parliament_id
                owner_id
                type
                doc_type
                doc_procedure
                type_number
                registry_number
                uri
                acronym
                short_title
                long_title
                description
                language
                body
                status
                status_date
                group_id
                subject
                coverage
                geolocation
                head_id
                timestamp
            "
        />
        <require permission="zope.View"
            set_attributes="timestamp"
        /><!-- !+TIMESTAMP(mr, jul-2011) granting edit on timestamp to anyone 
        with view privilege, as an item, while not essentuially being editable 
        may still be affected by the user's action e.g transited to another 
        state without "any modifications". Previous to circa r8460, this was 
        not an issue, and the user was being allowed to set timestamp even if
        no edit permission on the item.
        -->
    </class>
    
    <class class=".domain.Event">
        <require like_class=".domain.Doc" />
        <require permission="bungeni.event.Edit"
            set_attributes="
                owner_id
                type
                doc_type
                doc_procedure
                type_number
                registry_number
                uri
                acronym
                short_title
                long_title
                description
                language
                body
                status
                status_date
                group_id
                subject
                coverage
                geolocation
                head_id
            "
        />
    </class>
    
    
    
    <!-- parliamentary items -->

    <class class=".domain.ParliamentaryItem">
        <!-- domain / orm / schema -->
        <require permission="zope.View"
            attributes="
                files
                signatories
                event
                submission_date
                admissible_date
                
                owner
                itemsignatories
                attachments
                
                parliamentary_item_id
                parliament_id
                owner_id
                language
                short_name
                full_name
                body_text
                description
                subject
                coverage
                status
                status_date
                registry_number
                uri
                receive_notification
                type
                geolocation
                timestamp
                custom1
                custom2
                custom3
                custom4
            "
        />
        <require permission="zope.ManageContent"
            attributes="note"
        />
        <require permission="zope.View"
            set_attributes="timestamp"
        /><!-- !+TIMESTAMP(mr, jul-2011) granting edit on timestamp to anyone 
        with view privilege, as an item, while not essentuially being editable 
        may still be affected by the user's action e.g transited to another 
        state without "any modifications". Previous to circa r8460, this was 
        not an issue, and the user was being allowed to set timestamp even if
        no edit permission on the item.
        -->
    </class>
    
