<metal:block define-macro="body">
    <link rel="stylesheet" type="text/css" media="all" href="transcripts.css"
      tal:attributes="href context/++resource++transcripts.css" /> 
    <script type="text/javascript" src="transcript.js"
     tal:attributes="src context/++resource++transcripts.js"></script>
    <script type="text/javascript" src="ui.slider.js"
     tal:attributes="src context/++resource++ui.slider.js"></script>
    <metal:main> 
    <div id="transcripts_main">
        <div id="transcript_video">
            <span tal:content="view/sitting_id"/><br/>
            <span tal:condition="view/sitting_media_path | nothing">
	            <video tal:attributes="src view/sitting_media_path; duration view/duration" controls="controls" width="400" height="300">
                    your browser does not support the video tag
                </video>
            </span>
            <span tal:condition="not: view/sitting_media_path">
	            <img tal:attributes="src context/++resource++no_media.png"></img>
            </span>
        </div>  
        <div id="video_side_bar">
            <fieldset id="video_side_bar_fieldset"  >
                <legend >
                    <a href="javascript:add_transcript()">New transcript</a>
                </legend>
                <div id="new_transcript">
                </div>
                <tal:loop tal:repeat="transcript view/transcripts">
                    <fieldset id="transcript_fieldset" >
                        <legend>
                            <a href="javascript:play();" style="font-weight: bold; color: rgb(0, 0, 0);">
                                <img tal:attributes="src context/++resource++control_play_blue.png"/>
                                <span tal:replace="transcript/start_time | nothing"/> to <span tal:replace="transcript/end_time | nothing"/>
                            </a> | 
                            <a href="javascript:edit_transcript()">Edit</a> |
                            <a href="javascript:delete_transcript()">Delete</a> | 
                            <a href="javascript:edit_transcript()">Versions</a> |
                            <a href="javascript:edit_transcript()">Audit Log</a>
                        </legend>
                        <div class="transcript_person" >
                            person : <span tal:content="transcript/person"></span>
                        </div>
                        <div class="transcript_speech">
                            text : <span tal:content="transcript/text"></span>
                        </div>
                        
                    </fieldset>
                </tal:loop>
            </fieldset>
            
        </div>  
    </div>
    </metal:main>

</metal:block>
