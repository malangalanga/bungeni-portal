<theme href="http://%(theme_url)s/themes/%(portal_theme)s" />
		
<server-settings>
    <server>%(app_host)s:%(portal_http_port)s</server>
    <dev-allow>
        127.0.0.1
        localhost
    </dev-allow>
    <dev-user username="dev" password="maendeleo" />
    <dev-expiration>60</dev-expiration>
</server-settings>

<proxy path="/bungeni">
    <dest href="http://%(app_host)s:%(bungeni_http_port)s" />
    <response rewrite-links="1" />
    <response pyref="portal.theme.static.themes.rules:modify_proxy_response" />    
</proxy>


<proxy path="/exist">
    <dest href="http://%(app_host)s:8088/exist/apps/framework/bungeni" />
    <response rewrite-links="1" />
</proxy>

<proxy path="/plone">
    <dest href="http://%(app_host)s:%(plone_http_port)s/plone" />
    <response rewrite-links="1" />
</proxy>

<proxy path="/themes">
    <dest href="http://%(app_host)s:%(portal_static_port)s/themes/%(demo_theme)s" />
</proxy>

<proxy path="/static">
    <dest href="http://%(app_host)s:%(portal_static_port)s" />
</proxy>

<proxy path="/">
    <dest href="http://%(app_host)s:%(bungeni_http_port)s" />
    <response rewrite-links="1" />
    <response pyref="portal.theme.static.themes.rules:modify_proxy_response" />    
</proxy>
